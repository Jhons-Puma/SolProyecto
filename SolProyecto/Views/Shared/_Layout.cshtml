<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SolProyecto</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css?v=1.1" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>
<body>
    <header>
        <container>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
                <div class="container-fluid ">
                    <img class="" src="../../img/logoMonkey.png" style="width: 150px" />
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="#">Inicio <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Catalogo</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link disabled" href="#">Productos</a>
                            </li>
                        </ul>

                    </div>
                </div>
            </nav>
        </container>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

        <footer class="footer bg-dark text-light">
            <div class="container">
                <div class="row">
                    <div class="col-md-4">
                        <img class="" src="../../img/sparcologo1.jpg" style="width: 150px" />
                        <img class="" src="../../img/Michelin.jpg" style="width: 150px" />
                    </div>
                    <div class="col-md-4">
                        <img class="" src="../../img/logoMonkey.png" style="width: 150px" />
                        <p>&copy; 2023 Tu Empresa</p>
                    </div>
                    <div class="col-md-4 text-right">
                        <div class="social-icons mr-4">
                            <p>Siguenos en nuestras redes sociales</p>
                            <a href="#" target="_blank" class="text-light" ><i class="fab fa-facebook"></i></a>
                            <a href="#" target="_blank" class="text-light"><i class="fab fa-twitter"></i></a>
                            <a href="#" target="_blank" class="text-light"><i class="fab fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
